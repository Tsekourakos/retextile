<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:with field='res' type='com.retextile.resources.RetextileResource' />

	<g:HTMLPanel styleName="{res.style.grey_whole_screen}">
		<g:HTMLPanel styleName="{res.style.order_exit_button}"></g:HTMLPanel>

		<g:HTMLPanel styleName="{res.style.order_container}">
			<g:HTMLPanel styleName="{res.style.order_menu_container}">
				<g:Button ui:field="myBasket" styleName="{res.style.order_menu_button}">ΤΟ ΚΑΛΑΘΙ ΜΟΥ</g:Button>
				<g:Button ui:field="personalInfo" styleName="{res.style.order_menu_button}">ΠΡΩΣΟΠΙΚΑ
					ΣΤΟΙΧΕΙΑ</g:Button>
				<g:Button ui:field="payment" styleName="{res.style.order_menu_button}">ΠΛΗΡΟΜΗ</g:Button>
				<g:Button ui:field="confirmation" styleName="{res.style.order_menu_button}">ΕΠΙΒΕΒΑΙΩΣΗ</g:Button>
			</g:HTMLPanel>

			<g:HTMLPanel ui:field="orderItemsContainer" styleName="{res.style.order_item_container}"></g:HTMLPanel>

		</g:HTMLPanel>

	</g:HTMLPanel>
</ui:UiBinder> 